@model DoAn.Models.SanPham
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Shared/UserLayoutTest.cshtml";
}

<h2>THÔNG TIN CHI TIẾT SẢN PHẨM</h2>

<div class="card-border-dark">
    <table class="border-dark mx-3 mb-3 mt-3">
        <tr class="text-left">
            <td rowspan="5" width="45%">
                <img class="card-header" src="@Url.Content("~/Images/"+ Model.Anh)" width="100%" height="100%" alt="Image" />
            </td>
            <td width="20%">Tên sản phẩm:</td>
            <td width="35%" style="font-weight:bold; color:blue">@Model.TenSP</td>
        </tr>
        <tr class="text-left">
            <td>Hãng điện thoại:</td>
            <td style="color:blue">@Model.Loai.TenLoai</td>
        </tr>
        <tr class="text-left">
            <td>Mô tả kỹ thuật:</td>
            <td class="text-justify">@Model.MoTa</td>
        </tr>
        <tr class="text-left">
            <td>Giá bán:</td>
            <td style="font-weight:bold; color:red">@string.Format("{0:0,0}", @Model.GiaBan) VNĐ</td>
        </tr>
        <tr class="text-left">
            <td>Số lượng tồn:</td>
            <td class="text-justify">@Model.SLTon</td>
        </tr>
        <tr>
            <td>
                <a href="@Url.Action("ThemGioHang", "GioHang", new {@ms = Model.MaSP, @strURL = Request.Url.ToString()})">
                    <input type="submit" value="MUA NGAY" class="btn btn-primary" />

                </a>
                <a href="@Url.Action("SanPhamPartial", "SanPham")">
                    <input type="submit" value="MUA TIẾP" class="btn btn-primary">
                </a>

        </tr>
    </table>
</div>

